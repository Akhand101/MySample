<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5.0dip"
    android:paddingRight="5.0dip" >

    <RelativeLayout
        android:id="@+id/row_contacts_rlName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4.0dip" >

        <TextView
            android:id="@+id/row_contacts_txtName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/row_contacts_imgBtnTickMark"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="2.0dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textSize="16.0dip"
            android:textStyle="normal" />

        <ImageButton
            android:id="@+id/row_contacts_imgBtnTickMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:background="@null"
            android:src="@drawable/scheduled"
            android:visibility="visible" />

        <TextView
            android:id="@+id/row_contacts_txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/row_contacts_imgBtnTickMark"
            android:layout_below="@+id/row_contacts_imgBtnTickMark"
            android:text="TextView"
            android:textColor="@color/White"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_below="@+id/row_contacts_rlName"
        android:background="@color/Black" />

</RelativeLayout>